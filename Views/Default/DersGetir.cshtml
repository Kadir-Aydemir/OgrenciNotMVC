@model OgrenciNotMVC.Models.EntityFramework.DERSLER
@{
    ViewBag.Title = "DersGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Ders Güncelle</h3>
<br />

@using (Html.BeginForm("Guncelle", "Default", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.DERSAD)
        @Html.TextBoxFor(m => m.DERSAD, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.DERSID)

    <div style="margin-top:15px">
        <button class="btn btn-primary">Güncelle</button>
    </div>
}

