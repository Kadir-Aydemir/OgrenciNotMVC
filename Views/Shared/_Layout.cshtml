
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <title>Collapsible sidebar using Bootstrap 3</title>

        <!-- Bootstrap CSS CDN -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <!-- Our Custom CSS -->
        <link rel="stylesheet" href="~/Tema/sidebar/bootstrap-3/style4.css" />
    </head>
    <body>
        <nav class="headbar bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Öğrenci Bilgi Sistemi</a>
                <nav class="sidebar-header">                   
                    <button type="button" id="sidebarCollapse" class="btn menu-btn">
                        <i class="glyphicon glyphicon-menu-hamburger"></i>
                        <span></span>
                    </button>
                </nav>
            </div>           
        </nav>

        <div class="wrapper">
            <!-- Sidebar Holder -->
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3>Süleyman Demirel Üniversitesi</h3>
                    <strong>SDÜ</strong>
                </div>

                <ul class="list-unstyled components">

                    <li>
                        <a href="/Ogrenci/Index">
                            <i class="glyphicon glyphicon-list"></i>
                            Öğrenci Listesi
                        </a>

                    </li>
                    <li>
                        <a href="/Default/Index">
                            <i class="glyphicon glyphicon-book"></i>
                            Dersler
                        </a>
                    </li>
                    <li>
                        <a href="/Kulup/Index">
                            <i class="glyphicon glyphicon-calendar"></i>
                            Kulüpler
                        </a>
                    </li>
                    <li>
                        <a href="/Not/Index">
                            <i class="glyphicon glyphicon-dashboard"></i>
                            Sınav Notları
                        </a>
                    </li>
                </ul>               
            </nav>

            <!-- Page Content Holder -->
            <div id="content">
                
                @RenderBody()

            </div>
        </div>



        <!-- jQuery CDN -->
        <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
        <!-- Bootstrap Js CDN -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

        <script type="text/javascript">
            $(document).ready(function () {
                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar').toggleClass('active');
                });
            });
        </script>
    </body>
</html>

